<odoo>
    <data>
        <record id="my_view_product_supplier" model="ir.ui.view">
            <field name="name">product.template.supplier.form2</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="purchase.view_product_supplier_inherit"/>
            <field name="arch" type="xml">
                <field name="description_purchase" position="after">
                    <separator string="Código para proveedores" colspan="4"/>
                    <field name="codigo_purchase" colspan="4" nolabel="1" placeholder="Este código se mostrara en las solicitudes de presupuesto"/>
                </field>
            </field>
        </record>
    </data>
</odoo>